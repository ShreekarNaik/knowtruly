# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_VERSION=v1
API_TITLE=KnowTruly API
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# Database
DATABASE_URL=postgresql://knowtruly:knowtruly_dev_password@localhost:5432/knowtruly
POSTGRES_USER=knowtruly
POSTGRES_PASSWORD=knowtruly_dev_password
POSTGRES_DB=knowtruly

# Vector Database (Qdrant)
QDRANT_HOST=localhost
QDRANT_PORT=6333
QDRANT_API_KEY=
QDRANT_COLLECTION_NAME=profiles
QDRANT_VECTOR_SIZE=768

# Gemini API
GOOGLE_API_KEY=your_gemini_api_key_here
GEMINI_MODEL=gemini-pro
GEMINI_EMBEDDING_MODEL=text-embedding-004
GEMINI_TEMPERATURE=0.3
GEMINI_MAX_TOKENS=1024

# JWT Auth
SECRET_KEY=your_secret_key_min_32_chars_change_in_production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# File Storage
UPLOAD_DIR=./uploads
MAX_FILE_SIZE_MB=10

# Typst Configuration
TYPST_CLI_PATH=/usr/local/bin/typst
TYPST_TEMPLATES_DIR=./templates
TYPST_OUTPUT_DIR=./generated_resumes
TYPST_TIMEOUT_SECONDS=30

# Signature Service
RSA_KEY_SIZE=2048
SIGNATURE_ALGORITHM=RS256

# Environment
ENVIRONMENT=development
DEBUG=true
